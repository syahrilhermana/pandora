{% extends _layout %}

{% block css %}
    {# -- the comment -- #}
    {{ css('datatables.css', 'all', 'css') }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="widget-container fluid-height">
                <div class="heading">
                    <i class="fa fa-home"></i>Commodity &nbsp;<i class="fa fa-angle-double-right"></i>  UoM &nbsp;<i class="fa fa-angle-double-right"></i>
                </div>

                <div class="widget-content padded">
                    <form action="{{ site_url('commodity/uom/save') }}" method="post" class="form-horizontal">
                        <div class="form-group">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>UoM Code *</label>
                                    <div class="col-sm-12">
                                        <input type="text" id="uomCode" name="code" class="form-control" required >
                                        <input type="hidden" id="uomId" name="id" class="form-control" >
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>UoM Description *</label>
                                    <input type="text" id="uomName" name="name" class="form-control" required >
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>&nbsp;</label>
                                    <div class="col-sm-12">
                                        <div class="col-sm-6"><input type="submit" class="btn btn-primary form-control" value="Simpan" ></div>
                                        <div class="col-sm-6"><input type="reset" class="btn btn-default form-control" onclick="$('#uomId').val('')" value="Reset" ></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>

                    <br>
                    <div id="result">
                        <table id="datatables" class="table table-bordered table-responsive">
                            <thead>
                                <th width="55px">#</th>
                                <th>Code</th>
                                <th>Description</th>
                                <th width="150px">Action</th>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div><div class="clearfix"></div><br>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    {# -- the comment -- #}
    {{ js('jquery.datatables.js', 'js') }}
    {{ js('app/com/commodity.js', 'js') }}

    <script type="text/javascript">
        $(document).ready(function () {
            drawTable('{{ site_url('commodity/api/list_uom') }}');
        });
    </script>
{% endblock %}
