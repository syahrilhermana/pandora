{% extends _layout %}

{% block css %}
    {# -- the comment -- #}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <ul class="breadcrumb">
                <li><a href="#"></a><i class="fa fa-home"></i></li>
                <li>Commodity</li>
                <li class="active">Group</li>
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="widget-container fluid-height">
                <div class="heading">
                    <i class="fa fa-calendar"></i>Group
                    {#<button type="button" onclick="ajaxLoad('{{ site_url('commodity/api/modal/catalog_form') }}', 'Add Catalog')" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Tambah Catalog</button>#}
                </div>

                <div class="widget-content padded">
                    <div class="col-md-6">
                        <form action="{{ site_url('commodity/group/save') }}" method="post" class="form-horizontal">
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <label class="control-label col-md-3">Group Parent (Optional)</label>
                                        <div class="col-md-7">
                                            <input type="text" id="groupParentShow" class="form-control" placeholder="As Parent" disabled >
                                            <input type="hidden" id="groupParent" name="parent" class="form-control" >
                                            <input type="hidden" id="groupId" name="id" class="form-control" >
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <label class="control-label col-md-3">Group Code *</label>
                                        <div class="col-md-7">
                                            <div class="input-group">
                                                <span class="input-group-addon" id="groupCode"></span>
                                                <input type="text" id="groupCodeShow" name="code" class="form-control" required >
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <label class="control-label col-md-3">Group Name *</label>
                                        <div class="col-md-7">
                                            <input type="text" id="groupName" name="name" class="form-control" required >
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <label class="control-label col-md-3">&nbsp;</label>
                                        <div class="col-md-7">
                                            <button class="btn btn-primary">Simpan</button>
                                            <button type="reset" class="btn btn-default" onclick="$('#groupCode').text(''); $('#groupId').val('')">Cancel</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="col-md-6">
                        <div id="result">populating data . . .</div>
                    </div>

                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    {# -- the comment -- #}
    {{ js('app/com/commodity.js', 'js') }}

    <script type="text/javascript">
        $(document).ready(function () {
            $("#result").load("{{ site_url('commodity/group/list') }}");
        });
    </script>
{% endblock %}
