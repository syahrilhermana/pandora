{%  set config = get_config() %}
{%  set ci = get_instance() %}

<!DOCTYPE html>
<html>
<head>
    <title>{{ title }}</title>

    {{ meta }}

    <link href="http://fonts.googleapis.com/css?family=Lato:100,300,400,700" media="all" rel="stylesheet"
          type="text/css">
    {{ css('bootstrap.min.css', 'all', 'css') }}
    {{ css('fonts/webfonts/css/fontawesome-all.css', 'all', 'asset') }}
    {{ css('hightop-font.css', 'all', 'css') }}
    {{ css('jquery.fancybox.css', 'all', 'css') }}
    {{ css('ladda-themeless.min.css', 'all', 'css') }}
    {{ css('style.css', 'all', 'css') }}

    {% block css %}
    {% endblock %}
</head>
<body class="page-header-fixed bg-1">

<div class="modal-shiftfix">

    <!-- Navigation -->
    <div class="navbar navbar-fixed-top scroll-hide">
        <div class="container-fluid top-bar">
            <div class="pull-right">
                <ul class="nav navbar-nav pull-right">
                    <li class="dropdown user hidden-xs"><a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            {{ img('avatar-male.jpg', 'img', ({'width':'34','height':'34'})) }}John Smith<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">
                                    <i class="fa fa-user"></i>My Account</a>
                            </li>
                            <li><a href="#">
                                    <i class="fa fa-gear"></i>Account Settings</a>
                            </li>
                            <li><a href="login1.html">
                                    <i class="fa fa-sign-out"></i>Logout</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <button class="navbar-toggle"><span class="icon-bar"></span><span class="icon-bar"></span><span
                        class="icon-bar"></span></button>
            <a class="logo" href="{{ site_url('') }}">{{ config['app'] }}</a>
            <form class="navbar-form form-inline col-lg-2 hidden-xs">
                <input class="form-control" placeholder="Search" type="text">
            </form>
        </div>
        <div class="container-fluid main-nav clearfix">
            <div class="nav-collapse">
                <ul class="nav">
                    <li>
                        <a class="{% if ci.uri.segment(1)|capitalize == "Dashboard" %} current {% endif %}" href="{{ site_url('dashboard') }}"><span aria-hidden="true" class="hightop-home"></span>Dashboard</a>
                    </li>
                    <li class="dropdown"><a data-toggle="dropdown" class="{% if ci.uri.segment(1)|capitalize == "Commodity" %} current {% endif %}" href="#">
                            <span aria-hidden="true" class="hightop-forms"></span>Commodity<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="{{ site_url('commodity/group') }}">Group</a>
                            </li>
                            <li>
                                <a href="{{ site_url('commodity/catalog') }}">Catalog</a>
                            </li>
                            <li>
                                <a href="{{ site_url('commodity/uom') }}">UoM</a>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown"><a data-toggle="dropdown" href="#">
                            <span aria-hidden="true" class="hightop-pages"></span>Master<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="{{ site_url('master/role') }}">Role</a>
                            </li>
                            <li>
                                <a href="{{ site_url('master/process') }}">process</a>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown"><a data-toggle="dropdown" class="{% if ci.uri.segment(1)|capitalize == "Asset" %} current {% endif %}" href="#">
                            <span aria-hidden="true" class="hightop-feed"></span>Fixed Asset<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="{{ site_url('asset/fixed/record') }}">Pencatatan Baru</a>
                            </li>
                            <li>
                                <a href="{{ site_url('setting/config') }}">Mutasi</a>
                            </li>
                        </ul>
                    </li>
                    <li><a href="charts.html">
                        <span aria-hidden="true" class="hightop-charts"></span>Charts</a>
                    </li>
                    <li class="dropdown"><a data-toggle="dropdown" href="#">
                            <span aria-hidden="true" class="hightop-gear"></span>Settings<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="{{ site_url('setting/users') }}">User</a>
                            </li>
                            <li>
                                <a href="{{ site_url('setting/config') }}">Konfigurasi</a>
                            </li>
                            <li>
                                <a href="{{ site_url('setting/help') }}">Bantuan</a>
                            </li>
                            <li>
                                <a href="#about" class="fancybox">About</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End Navigation -->

    <div class="container-fluid main-content">
        {# -- content -- #}
        {% block content %}
        {% endblock %}
    </div>
</div>

{# -- start modal layout -- #}
<div class="modal fade" id="default" tabindex="-1" data-keyboard="false" role="dialog" data-backdrop="static" aria-hidden="true">
    <div class="modal-dialog"  style="min-width: 800px;">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="default-title"></h4>
            </div>
            <div class="modal-body">
                <div id="default-result"></div>

        </div>
    </div>
</div>
{# -- end -- #}

<script src="http://code.jquery.com/jquery-1.10.2.min.js" type="text/javascript"></script>
<script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js" type="text/javascript"></script>

{{ js('bootstrap.min.js', 'js') }}
{{ js('jquery.validate.js', 'js') }}
{{ js('jquery.mousewheel.js', 'js') }}
{{ js('modernizr.custom.js', 'js') }}
{{ js('jquery.fancybox.pack.js', 'js') }}
{{ js('spin.min.js', 'js') }}
{{ js('ladda.min.js', 'js') }}
{{ js('main.js', 'js') }}

<script type="text/javascript">
    $(document).ready(function () {
        {% if ci.session.flashdata('error') %}
            alert('{{ ci.session.flashdata('error') }}');
        {% endif %}
    })
</script>

{% block js %}
{% endblock %}
</body>
</html>