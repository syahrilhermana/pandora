{% extends _layout %}

{% block css %}
    {# -- the comment -- #}
    {{ css('datatables.css', 'all', 'css') }}
    {{ css('select2.css', 'all', 'css') }}
    {{ css('jquery.fileupload-ui.css', 'all', 'css') }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="widget-container fluid-height">
                <div class="heading">
                    <i class="fa fa-home"></i>Commodity &nbsp;<i class="fa fa-angle-double-right"></i>  Catalog

                    <div style="float: right">
                        <button type="button" onclick="ajaxLoad('{{ site_url('commodity/api/modal/catalog_form') }}', 'Add Catalog')" class="btn btn-primary"><i class="fa fa-plus"></i> Tambah Catalog</button>
                    </div>
                </div>

                <div class="widget-content padded">
                    <div id="result">
                        <table id="datatables" class="table table-bordered table-responsive">
                            <thead>
                            <th width="55px">#</th>
                            <th>Code</th>
                            <th>Description</th>
                            <th width="200px">Action</th>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div><div class="clearfix"></div><br>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    {# -- the comment -- #}
    {{ js('jquery.datatables.js', 'js') }}
    {{ js('select2.js', 'js') }}
    {{ js('bootstrap-fileupload.js', 'js') }}
    {{ js('app/com/commodity.js', 'js') }}

    <script type="text/javascript">
        $(document).ready(function () {
            drawTable('{{ site_url('commodity/api/list_catalog') }}');
        });
    </script>
{% endblock %}
