{% extends _layout %}

{% block css %}
    {# -- the comment -- #}
    {{ css('datatables.css', 'all', 'css') }}
    {{ css('select2.css', 'all', 'css') }}
    {{ css('jquery.fileupload-ui.css', 'all', 'css') }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <ul class="breadcrumb">
                <li><a href="#"></a><i class="fa fa-home"></i></li>
                <li>Asset</li>
                <li class="active">Fixed Asset</li>
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="widget-container fluid-height">
                <div class="heading">
                    <i class="fa fa-calendar"></i>Asset
                    <a href="{{ site_url('asset/fixed/record-form') }}" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Tambah Asset</a>
                </div>

                <div class="widget-content padded">
                    <div id="result">
                        <table id="datatables" class="table table-bordered table-responsive">
                            <thead>
                            <th width="55px">#</th>
                            <th>Code</th>
                            <th>Description</th>
                            <th width="100px">Action</th>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div><div class="clearfix"></div><br>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    {# -- the comment -- #}
    {{ js('jquery.datatables.js', 'js') }}
    {{ js('select2.js', 'js') }}
    {{ js('bootstrap-fileupload.js', 'js') }}
    {{ js('app/com/commodity.js', 'js') }}

    <script type="text/javascript">
        $(document).ready(function () {
            {#drawTable('{{ site_url('commodity/api/list_catalog') }}');#}
        });
    </script>
{% endblock %}
