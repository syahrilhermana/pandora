<form id="form-mutation" action="{{ site_url('asset/mutation/save') }}" method="post" class="form-horizontal" enctype="multipart/form-data">
    <div class="form-group">
        <div class="col-lg-6">
            <label class="control-label col-md-4">Asset Code</label>
            <div class="col-md-7">
                <input type="hidden" name="asset_id" class="form-control" value="{{ mutation.asset_id }}">
                <input class="form-control" name="asset_code" disabled type="text" value="{{ mutation.asset_code }}" >
            </div>
        </div>
    </div>

    {#<div class="form-group">#}
    {#<div class="col-lg-6">#}
    {#<label class="control-label col-md-4">Asset Barcode</label>#}
    {#<div class="col-md-7">#}
    {#<img src="{{ asset(mutation, 'image') }}" alt="{{ mutation.barcode }}" />#}
    {#</div>#}
    {#</div>#}
    {#</div>#}

    <div class="form-group">
        <div class="col-lg-6">
            <label class="control-label col-md-4">Asset Status</label>
            <div class="col-md-7">
                <input class="form-control" name="asset_status" disabled type="text" value="{{ mutation.asset_status }}" >
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-6">
            <label class="control-label col-md-4">Catalog Code</label>
            <div class="col-md-7">
                <input class="form-control" name="catalog_code" disabled type="text" value="{{ mutation.catalog_code }}" >
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-6">
            <label class="control-label col-md-4">Group Commodity</label>
            <div class="col-md-7">
                <input value="{{ group_name(mutation.com_group) }}" class="form-control" disabled>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-6">
            <label class="control-label col-md-4">Material Name</label>
            <div class="col-md-7">
                <input class="form-control" name="material_name" readonly type="text" value="{{ mutation.material_name }}" disabled>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-6">
            <label class="control-label col-md-4">ADM UOM</label>
            <div class="col-md-7">
                <input value="{{ UoM(mutation.adm_uom) }}" class="form-control" disabled>
            </div>
        </div>
    </div>
    {#<hr style="border-color:#908787; !important;">#}

    <div class="form-group">
        <div class="col-lg-6">
            <label class="control-label col-md-4">Depreciation</label>
            <div class="col-md-7">
                <input class="form-control" name="depreciation" type="text" value="{{ mutation.depreciation }}" disabled>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-6">
            <label class="control-label col-md-4">Actual Price</label>
            <div class="col-md-7">
                <input class="form-control" name="actual_price" type="text" value="{{ mutation.actual_price }}" disabled>
            </div>
        </div>
    </div>

    {#<div class="form-group">#}
        {#<div class="col-lg-6">#}
            {#<label class="control-label col-md-4">Status</label>#}
            {#<div class="col-md-7">#}
                {#<input class="form-control" name="status" type="text" value="{{ mutation.status }}" >#}
            {#</div>#}
        {#</div>#}
    {#</div>#}

    <div class="form-group">
        <div class="col-lg-6">
            <label class="control-label col-md-4">Comtable</label>
            <div class="col-md-7">
                <input class="form-control" name="comtable" type="text" value="{{ mutation.comtable }}" >
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-6">
            <label class="control-label col-md-4">Company</label>
            <div class="col-md-7">
                <select class="form-control" name="company">
                    <option value=""> -- Select Company --
                        {% for comp in company %}
                    <option value="{{ comp.id_cmp }}" {% if comp.id_cmp == mutation.company %} selected{% endif %}>{{ comp.name }}</option>
                    {% endfor %}
                    </option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-6">
            <label class="control-label col-md-4">Department</label>
            <div class="col-md-7">
                <select class="form-control" name="department">
                    <option value=""> -- Select Department --
                        {% for dpt in department %}
                    <option value="{{ dpt.id_dpt }}" {% if dpt.id_dpt == mutation.department %} selected{% endif %}>{{ dpt.name }}</option>
                    {% endfor %}
                    </option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-6">
            <label class="control-label col-md-4">Room</label>
            <div class="col-md-7">
                <select class="form-control" name="room">
                    <option value=""> -- Select Room --
                        {% for rm in room %}
                    <option value="{{ rm.id_room }}" {% if rm.id_room == mutation.room %} selected{% endif %}>{{ rm.name }}</option>
                    {% endfor %}
                    </option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-6">
            <label class="control-label col-md-4">User</label>
            <div class="col-md-7">
                <select class="form-control" name="user">
                    <option value=""> -- Select User --
                        {% for usr in user %}
                    <option value="{{ usr.id_user }}" {% if usr.id_user == mutation.user %} selected{% endif %}>{{ usr.name }}</option>
                    {% endfor %}
                    </option>
                </select>
            </div>
        </div>
    </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary" onclick="ajaxSubmit('form-mutation', '{{ site_url('asset/api/mutation') }}')" >Simpan</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    </div>
</form>