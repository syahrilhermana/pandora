<form id="form-user" action="{{ site_url('master/user/save') }}" method="post" class="form-horizontal" enctype="multipart/form-data">
    <div class="form-group">
        <div class="col-lg-6">
            <label class="control-label col-md-4">Username</label>
            <div class="col-md-7">
                <input class="form-control" name="username" type="text" value="{{ user.username }}" >
                <input type="hidden" name="id_user" class="form-control" value="{{ user.id_user }}">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-6">
            <label class="control-label col-md-4">Password</label>
            <div class="col-md-7">
                <input class="form-control" name="password" type="text" value="{{ user.password }}" >
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-6">
            <label class="control-label col-md-4">Name</label>
            <div class="col-md-7">
                <input class="form-control" name="name" type="text" value="{{ user.name }}" >
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-6">
            <label class="control-label col-md-4">Department</label>
            <div class="col-md-7">
                <select class="form-control" name="department" required>
                    <option value=""> -- select department --
                        {% for departement in dept %}
                    <option value="{{ departement.id_dpt }}" {% if departement.id_dpt == user.department %} selected{% endif %}>{{ departement.name }}</option>
                    {% endfor %}
                    </option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-6">
            <label class="control-label col-md-4">Company</label>
            <div class="col-md-7">
                <select class="form-control" name="company" required>
                    <option value=""> -- select company --
                        {% for company in comp %}
                    <option value="{{ company.id_cmp }}" {% if company.id_cmp == user.company %} selected{% endif %}>{{ company.name }}</option>
                    {% endfor %}
                    </option>
                </select>
            </div>
        </div>
    </div>


    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary" onclick="ajaxSubmit('form-user', '{{ site_url('master/api/user') }}')" >Simpan</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    </div>
</form>